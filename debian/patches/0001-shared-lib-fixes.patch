 add_subdirectory(src)
 
+install(
+    DIRECTORY include/
+    DESTINATION include${LOKI_INSTALL_INCLUDEDIR_SUFFIX}
+    COMPONENT development
+    FILES_MATCHING PATTERN "*.h" PATTERN "*.inl")
